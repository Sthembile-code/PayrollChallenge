    @section Scripts {


        @Scripts.Render("~/bundles/jqueryui")
        @Styles.Render("~/Content/cssjqryUi")
        <script type="text/javascript">
            $(document).ready(function () {
                $("#PayPeriod").datepicker();
                altField: "#@Html.IdFor(m => m.PayPeriod)"
            });
