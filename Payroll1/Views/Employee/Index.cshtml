                <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label for="empId">Employee Id</label>
                        <input type="text" class="form-control" id="EmpID" name="EmpId" value="@Model.EmpId" />
                        <span asp-validation-for="EmpID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="hrs">Hours Worked</label>
                        <input type="text" class="form-control" id="hrs" name="hours" required="required" value="@Model.hours" />
                    </div>

                    <div class="form-group">
                        <label for="payp">Pay Period</label>
                        <input type="date" class="form-control" id="payp" name="payp" value="@Model.PayPeriod" />
                    </div>

                    <div class="form-group">
                        <label for="amt">Amount Paid</label>
                        <input type="text" class="form-control" id="amt" name="AmountPaid" value="@Model.AmountPaid" readonly />
                    </div>

                <button type="submit" onclick="return ValidateFields()" class="btn btn-info" id="add" value="Calculate">Calculate Pay</button>
